            <Grid Grid.Row="1" ColumnDefinitions="*,*,*">
                <ImageButton x:Name="BtnMutlu" Grid.Column="0" Source="mutlu.png" BackgroundColor="Transparent" Clicked="BtnMutlu_Clicked"></ImageButton>
                <ImageButton x:Name="BtnNotr" Grid.Column="1" Source="notr.png" BackgroundColor="Transparent" Clicked="BtnNotr_Clicked"></ImageButton>
                <ImageButton x:Name="BtnSad" Grid.Column="2" Source="sad.png" BackgroundColor="Transparent" Clicked="BtnSad_Clicked"></ImageButton>
