                <Label x:Name="TitleLabel" Style="{StaticResource FocusedLblStl}" VerticalOptions="End" HorizontalOptions="Center" Grid.Column="0" TextColor="Black" Text="Ankete HoÅŸ Geldiniz"></Label>
                <ImageButton x:Name="BtnSettings" Clicked="BtnSettings_Clicked" VerticalOptions="Start" Grid.Column="1" Source="settings.png" BackgroundColor="Transparent"/>
